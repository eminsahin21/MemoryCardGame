<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sariarkakoyu"
    tools:context=".OnePlayerLevel_1_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".OnePlayerLevel_1_Activity">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView_2"
            android:layout_width="112dp"
            android:layout_height="140dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="56dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.618"
            app:srcCompat="@drawable/arkafoto"
            app:strokeColor="@color/black"
            app:strokeWidth="5dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView_3"
            android:layout_width="112dp"
            android:layout_height="140dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="212dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView_4"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/arkafoto"
            app:strokeColor="@color/black"
            app:strokeWidth="5dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView_4"
            android:layout_width="112dp"
            android:layout_height="140dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="212dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/arkafoto"
            app:strokeColor="@color/black"
            app:strokeWidth="5dp" />

        <TextView
            android:id="@+id/textview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.846"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView_1"
            android:layout_width="112dp"
            android:layout_height="140dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.618"
            app:srcCompat="@drawable/arkafoto"
            app:strokeColor="@color/black"
            app:strokeWidth="5dp" />

        <TextView
            android:id="@+id/cardtext_1"
            android:layout_width="76dp"
            android:layout_height="25sp"
            android:layout_marginTop="88dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/cardtext_2"
            app:layout_constraintHorizontal_bias="0.456"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_3" />

        <TextView
            android:id="@+id/cardtext_2"
            android:layout_width="81dp"
            android:layout_height="25sp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="68dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_4" />

        <TextView
            android:id="@+id/cardtext_3"
            android:layout_width="73dp"
            android:layout_height="25sp"
            android:layout_marginTop="44dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cardtext_4"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardtext_1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/cardtext_4"
            android:layout_width="79dp"
            android:layout_height="25sp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="68dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardtext_2"
            app:layout_constraintVertical_bias="0.033" />

        <TextView
            android:id="@+id/scoretext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score:0"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.247"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.096" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>